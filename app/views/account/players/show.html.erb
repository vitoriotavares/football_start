<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @player do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @player %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @player, strategy: :label do %>
            <%= render 'shared/attributes/date', attribute: :birth_date %>
            <%= render 'shared/attributes/text', attribute: :nationality %>
            <%= render 'shared/attributes/text', attribute: :position %>
            <%= render 'shared/attributes/number', attribute: :height %>
            <%= render 'shared/attributes/number', attribute: :weight %>
            <%= render 'shared/attributes/options', attribute: :skills %>
            <%= render 'shared/attributes/html', attribute: :description %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @player], class: first_button_primary if can? :edit, @player %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @player], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@player)) } if can? :destroy, @player %>
          <%= link_to t('global.buttons.back'), [:account, @team, :players], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
