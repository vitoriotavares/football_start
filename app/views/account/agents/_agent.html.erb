<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :agents %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: agent do %>
  <tr data-id="<%= agent.id %>">
    <%= render "shared/tables/checkbox", object: agent %>
    <td><%= render 'shared/attributes/text', attribute: :license_number, url: [:account, agent] %></td>
    <td><%= render 'shared/attributes/number', attribute: :years_of_experience %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, agent %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, agent], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, agent %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, agent], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(agent)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
